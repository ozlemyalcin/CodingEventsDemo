@using CodingEventsDemo.ViewModels;
@model AddEventViewModel;

<h1>Add Event</h1>

<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-group" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-group" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" class="form-group" />
        <span asp-validation-for="ContactEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="Place"></label>
        <input asp-for="Place" class="form-group" />
        <span asp-validation-for="Place"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumOfParticipant">Participant Number</label>
        <input asp-for="NumOfParticipant" class="form-group" />
        <span asp-validation-for="NumOfParticipant"></span>
    </div>


    <input type="submit" value="Add Event" />
</form>
